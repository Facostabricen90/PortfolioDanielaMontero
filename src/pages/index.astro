---
import Navbar from "../Components/Navbar.astro";
---

<html>
  <head>
    <title>Daniela Montero</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body class="bg-gray-100 text-gray-900">
    <Navbar />

    <main class="container mx-auto p-4">
      <section id="home" class="h-screen flex items-center justify-center">
        <div class="text-center">
          <h1 class="text-5xl font-bold mb-4">Welcome to My Portfolio</h1>
          <p class="text-lg text-gray-700">Showcasing my skills and projects</p>
        </div>
      </section>

      <section id="about-me" class="h-screen flex items-center justify-center">
        <div class="text-center">
          <h2 class="text-4xl font-bold mb-4">About Me</h2>
          <p class="text-lg text-gray-700">
            I am a passionate developer with experience in creating amazing web
            and mobile applications.
          </p>
        </div>
      </section>

      <section id="contact-me" class="h-screen flex items-center justify-center">
        <div class="text-center">
          <h2 class="text-4xl font-bold mb-4">Contact Me</h2>
          <form class="max-w-md mx-auto">
            <div class="mb-4">
              <input
                type="text"
                placeholder="Your Name"
                class="w-full p-2 border border-gray-300 rounded-lg"
              />
            </div>
            <div class="mb-4">
              <input
                type="email"
                placeholder="Your Email"
                class="w-full p-2 border border-gray-300 rounded-lg"
              />
            </div>
            <div class="mb-4">
              <textarea
                placeholder="Your Message"
                class="w-full p-2 border border-gray-300 rounded-lg"
                rows="4"
              ></textarea>
            </div>
            <button
              type="submit"
              class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600"
            >
              Send Message
            </button>
          </form>
        </div>
      </section>
    </main>
  </body>
</html>

